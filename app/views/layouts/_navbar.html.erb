 <div class="navbar navbar-default navbar-fixed-top", role='navigation'>
  <div class="container-fluid">
    <div class="navbar-header">
       <button type="button" class="navbar-toggle" data-toggle="collapse" data-target='.navbar-collapse' aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Blog", root_path, class: "navbar-brand" %>
    </div><!--  nav-bar header end -->

    <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class=<%= is_active?(topposts_path) %>><%= link_to "Top Posts", topposts_path %></li>
        <li class=<%= is_active?(randomposts_path) %>><%= link_to "Random Posts", randomposts_path %></li>
      </ul>
      <div class="navbar-form navbar-left">
        <%= form_tag search_posts_path, method: :get do %>
          <%= text_field_tag :search, nil, placeholder: "search", class: "form-control" %>
          <%= submit_tag "Search", class:"btn btn-default" %>
        <%end%>
      </div>
       <!-- Logged in state -->
      <% if current_user %>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/users/edit" id="profile-btn">Profile</a></li>
        <li><a href="/logout" id="logout-btn">Logout</a></li>
      </ul>
      <!-- end logged in state -->
      <!-- If user is not logged in -->
      <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li class="logged-out"><%= link_to 'Sign Up', '/signup' %></li>
        <li class="logged-out"><%= link_to 'Log In', '/login' %></li>
      </ul>
      <% end %>
      <!-- end user not logged in -->
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</div> <!-- end navbar -->